<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
 "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<stl:block xmlns="http://www.w3.org/1999/xhtml"
           xmlns:stl="http://www.hforge.org/xml-namespaces/stl">

  <div class="un-avis even">
    <span class="a-rating rating-${note}"/>
    <span class="review-title" stl:if="title">${title}</span>

    <stl:block stl:if="not is_on_user_view">
      Author: <a href="${author/href}" stl:if="author">${author/public_title}</a><br/>
    </stl:block>

    <stl:block stl:if="not is_on_product_view">
      Product: <a href="${product/link}">${product/title}</a><br/>
    </stl:block>

    <div class="advantages">
      <span class="advantages-title">
        Advantages:
      </span>
      ${advantages}
    </div>

    <div class="disadvantages">
      <span class="disadvantages-title">
      Disadvantages:
      </span>
      ${disadvantages}
    </div>

    <p>
    ${description}
    </p>

    <a href="${href}/;add_report">Report</a>
    <br/>
    <div stl:repeat="image images" class="thumb">
      <a href="${image/src}/;download" rel="fancybox">
        <img src="${image/src}/;thumb?width=50&amp;height=50" title="${image/title}"/>
      </a>
    </div>
  </div>
  <div class="clear"/>

</stl:block>
