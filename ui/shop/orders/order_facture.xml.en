<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:pml="http://www.hforge.org/xml-namespaces/pml"
      xmlns:stl="http://www.hforge.org/xml-namespaces/stl">

  <head>
    <title>Bill</title>

    <style>
      #articles{
        margin-top: 20px;
        border: 1px solid black;
      }
      #articles th{
        background-color: #E2E2E2;
      }
      .align-right{
        text-align: right;
      }

      /* FOOTER */

      p.page {
        font-family: sansserif;
        text-align: right;
        font-size: 6;
        font-weight: normal;
        padding: 0;
      }
    </style>
  </head>

  <pml:header>
    <img src="${logo}/;download"/>
  </pml:header>

  <pml:footer>
    <p class="page">Page <pml:pagenumber/> / <pml:pagetotal/></p>
  </pml:footer>


  <body style="margin-left:0.5cm; margin-right:0.5cm; padding-left:0; padding-right:0;">
    <table id="infos">
      <tr>
        <th>Order number</th>
        <td>${num_cmd}</td>
      </tr>
      <tr>
        <th>Date</th>
        <td>${creation_date}</td>
      </tr>
    </table>

    <table id="addresses">
      <tr>
        <td>
          <p>
            <b>Delivery address</b><br/>
            ${delivery_address/firstname} ${delivery_address/lastname}<br/>
            ${delivery_address/address_1}<br/>
            <stl:block stl:if="delivery_address/address_2">
              ${delivery_address/address_2}<br/>
            </stl:block>
            ${delivery_address/zipcode} ${delivery_address/town}<br/>
            ${delivery_address/country}<br/>
          </p>
        </td>
        <td></td>
        <td>
          <p>
            <b>Bill address</b><br/>
            ${bill_address/firstname} ${bill_address/lastname}<br/>
            ${bill_address/address_1}<br/>
            <stl:block stl:if="bill_address/address_2">
              ${bill_address/address_2}<br/>
            </stl:block>
            ${bill_address/zipcode} ${bill_address/town}<br/>
            ${bill_address/country}<br/>
          </p>
        </td>
      </tr>
    </table>

    <table id="articles">
      <tr>
        <th>Product</th>
        <th>Unit price HT</th>
        <th>Quantity</th>
        <th>Total price</th>
      </tr>
      <tr stl:repeat="product products">
        <td>${product/title} XXX Add options</td>
        <td>${product/price/unit/with_tax} €</td>
        <td>${product/quantity}</td>
        <td>${product/price/total/with_tax} €</td>
      </tr>
      <tr>
        <td colspan="3" class="align-right">Shipping</td>
        <td>${shipping_price} €</td>
      </tr>
      <tr>
        <td colspan="3" class="align-right">Total Price</td>
        <td>${total_price} €</td>
      </tr>
    </table>

 </body>
</html>
